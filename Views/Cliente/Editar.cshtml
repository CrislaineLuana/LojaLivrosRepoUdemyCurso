@using LojaLivros.Dtos.Clientes
@model ClienteEditarDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container mt-5">
    <form method="post" asp-action="Editar" asp-controller="Cliente">
        <input asp-for="Id" type="hidden" />    
        <input asp-for="Endereco.Id" type="hidden" />
        <input asp-for="Endereco.ClienteId" type="hidden" />
        <h2>Edição de Clientes</h2>
        <div class="mb-1">
            <label class="form-label">Nome Completo:</label>
            <input type="text" asp-for="NomeCompleto" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="NomeCompleto"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Usuário:</label>
            <input type="text" asp-for="Usuario" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Usuario"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">E-mail:</label>
            <input type="email" asp-for="Email" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-12 d-flex gap-1 w-100">
            <div class="mb-1 col-6">
                <label class="form-label">CEP:</label>
                <input type="text" asp-for="Endereco.CEP" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Endereco.CEP"></span>
            </div>
            <div class="mb-1 col-6">
                <label class="form-label">Estado:</label>
                <input type="text" asp-for="Endereco.Estado" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Endereco.Estado"></span>
            </div>
        </div>
        <div class="col-12 d-flex gap-1 w-100">
            <div class="mb-1 col-8 ">
                <label class="form-label">Logradouro:</label>
                <input type="text" asp-for="Endereco.Logradouro" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Endereco.Logradouro"></span>
            </div>
            <div class="mb-1 col-4">
                <label class="form-label">Número:</label>
                <input type="text" asp-for="Endereco.Numero" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Endereco.Numero"></span>
            </div>
        </div>
        <div class="col-12 d-flex gap-1">
            <div class="mb-1 col-6">
                <label class="form-label">Bairro:</label>
                <input type="text" asp-for="Endereco.Bairro" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Endereco.Bairro"></span>
            </div>
            <div class="mb-1 col-6">
                <label class="form-label">Complemento:</label>
                <input type="text" asp-for="Endereco.Complemento" class="form-control shadow-none">
                <span class="text-danger" asp-validation-for="Endereco.Complemento"></span>
            </div>


        </div>



        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-pencil"></i> Editar!</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Cliente" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>

    </form>
</div>