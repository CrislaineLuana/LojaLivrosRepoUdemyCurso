@using LojaLivros.Dtos.Login
@model LoginDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutDeslogada";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container" style="margin-top: 25rem; width:75rem; background: #dfdfdf;color:black; font-size: 16px; padding:70px; border-radius: 5px">
<form asp-action="login" asp-controller="Home" method="post">
    <div class="mb-3"> 
        <label class="form-label">E-mail:</label>
        <input type="email" class="form-control"  asp-for="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Senha:</label>
        <input type="password" class="form-control" asp-for="Senha">
        <span asp-validation-for="Senha"></span>
    </div>
    <div class="mb-3">
            <p class="form-label">Não tem conta? <a asp-action="Cadastrar" asp-controller="Usuario" asp-route-id="0">Cadastre-se</a></p>
    </div>
        <button type="submit" class="btn btn-primary w-100" style="font-size:16px">Entrar</button>
</form>
</div>