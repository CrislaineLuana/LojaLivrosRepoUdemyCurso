@{
}

<div class="container mt-5">
    <form method="post" asp-action="MudarSituacaoUsuario" asp-controller="Usuario">
        <input asp-for="Id" type="hidden" />
        <h2>Detalhes de Livro - @Model.Titulo</h2>

        @if (Model.Capa != null)
        {
            <div class="text-center">
                <img src="/imagem/@Model.Capa" style="width: 150px; height: 200px"  />
            </div>
           
        }


        <div class="mb-1">
            <label class="form-label">Titulo:</label>
            <input type="text" asp-for="Titulo" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">Autor:</label>
            <input type="text" asp-for="Autor" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">Descricao:</label>
            <input type="text" asp-for="Descricao" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">ISBN:</label>
            <input type="text" asp-for="ISBN" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">Quantidade em estoque:</label>
            <input type="text" asp-for="QuantidadeEstoque" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">Ano de publicacao:</label>
            <input type="text" asp-for="AnoPublicacao" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">Data Cadastro:</label>
            <input type="text" asp-for="DataCadastro" class="form-control shadow-none" disabled>
        </div>
        <div class="mb-1">
            <label class="form-label">Data última alteração:</label>
            <input type="text" asp-for="DataAlteracao" class="form-control shadow-none" disabled>
        </div>


        <div class="btn-box d-flex mt-3">   
            <a type="submit" class="btn btn-info w-100" asp-controller="Livro" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>

    </form>
</div>