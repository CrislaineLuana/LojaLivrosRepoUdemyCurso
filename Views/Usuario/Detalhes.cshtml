@using LojaLivros.Enums

@model UsuarioModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Dados - Gerais</button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Dados - Endereço</button>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">


    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

        <div class="container mt-5">
            <form method="post" asp-action="MudarSituacaoUsuario" asp-controller="Usuario">
                <input asp-for="Id" type="hidden" />
                @if (Model.Cargo != PerfilEnum.Cliente)
                {
                    <h2>Detalhes de Funcionários</h2>
                }
                else
                {
                    <h2>Detalhes de Clientes</h2>
                }
                <div class="mb-1">
                    <label class="form-label">Nome Completo:</label>
                    <input type="text" asp-for="NomeCompleto" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                    <label class="form-label">Usuário:</label>
                    <input type="text" asp-for="Usuario" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                    <label class="form-label">E-mail:</label>
                    <input type="email" asp-for="Email" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                    <label class="form-label">Situação:</label>
                    <input type="text" value="@(Model.Situação == true ? "Ativo" : "Inativo")" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                    <label class="form-label">Data Cadastro:</label>
                    <input type="text" asp-for="DataCadastro" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                    <label class="form-label">Data última alteração:</label>
                    <input type="text" asp-for="DataAlteracao" class="form-control shadow-none" disabled>
                </div>


                <div class="btn-box d-flex mt-3">
                    @if (Model.Situação == false)
                    {
                        <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus"></i> Ativar Usuário!</button>
                    }
                    else
                    {
                        <button type="submit" type="button" class="btn btn-danger w-50 mx-1"><i class="bi bi-x"></i> Inativar Usuário!</button>
                    }

                    @if (Model.Cargo == PerfilEnum.Cliente)
                    {
                        <a type="submit" class="btn btn-info w-50" asp-controller="Cliente" asp-action="Index" asp-route-id="0"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
                    }
                    else
                    {
                        <a type="submit" class="btn btn-info w-50" asp-controller="Funcionario" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
                    }
                </div>

            </form>
        </div>
    </div>


    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <div class="container mt-5">
            <form method="post" asp-action="MudarSituacaoUsuario" asp-controller="Usuario">
                <input asp-for="Id" type="hidden" />
                <h2>Detalhes de Clientes</h2>
                <div class="mb-1">
                <label class="form-label">CEP:</label>
                <input type="text" asp-for="Endereco.CEP" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                <label class="form-label">Logradouro:</label>
                <input type="text" asp-for="Endereco.Logradouro" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                <label class="form-label">Número:</label>
                <input type="email" asp-for="Endereco.Numero" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                <label class="form-label">Bairro:</label>
                <input type="text" asp-for="Endereco.Bairro" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                <label class="form-label">Estado:</label>
                <input type="text" asp-for="Endereco.Estado" class="form-control shadow-none" disabled>
                </div>
                <div class="mb-1">
                <label class="form-label">Complemento:</label>
                <input type="text" asp-for="Endereco.Complemento" class="form-control shadow-none" disabled>
                </div>

                <div class="btn-box d-flex mt-3">
                    @if (Model.Situação == false)
                    {
                        <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus"></i> Ativar Registro!</button>
                    }
                    else
                    {
                        <button type="submit" type="button" class="btn btn-danger w-50 mx-1"><i class="bi bi-x"></i> Inativar Registro!</button>
                    }

                    @if (Model.Cargo == PerfilEnum.Cliente)
                    {
                        <a type="submit" class="btn btn-info w-50" asp-controller="Cliente" asp-action="Index" asp-route-id="0" ><i class="bi bi-arrow-left-circle"></i> Voltar</a>
                    }
                    else
                    {
                        <a type="submit" class="btn btn-info w-50" asp-controller="Usuario" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
                    }
                        
                </div>

            </form>
        </div>
    </div>

