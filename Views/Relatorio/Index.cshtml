@using LojaLivros.Enums

@{
    ViewData["Title"] = "Home Page";
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="album py-5">
    <div class="container">

        <h2 class="text-center mb-5">Relatórios</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">


            
                @foreach (var relatorio in Enum.GetValues(typeof(RelatorioEnum)))
                {

                    <div class="card card-livros" style="width: 40rem; margin-left: 20px; margin-bottom:20px">
                        <div class="card-body">
                        <h5 class="card-title text-center" style="font-size:11px">@relatorio.ToString()</h5>
                        <a type="submit" class="btn btn-success w-100" style="font-size:12px" asp-action="Gerar" asp-controller="Relatorio" asp-route-id="@relatorio.GetHashCode()">Excel</a>
                        </div>
                    </div>


                }
            



        </div>
    </div>
</div>